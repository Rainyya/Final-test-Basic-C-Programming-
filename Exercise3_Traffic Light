#include <iostream> 
#include <stdlib.h>    
#include <time.h> 
#include <windows.h>  
#include <iostream>
using namespace std;
int main() 
{

	char mainOption='o';
	HANDLE hStdOut = GetStdHandle(STD_OUTPUT_HANDLE); 	
