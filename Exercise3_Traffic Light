	{			    		
		cout <<" ============================="<<endl;
		cout <<" Traffic Light Signal "<<endl;
		cout <<" ============================="<<endl;
		cout << " O) All OFF" << endl;
		cout << " 1) RED " << endl;
		cout << " 2) YELLOW " << endl;
		cout << " 3) GREEN" << endl;	 
		cout << " E) Exit" << endl;
		
		cout<<endl;
		switch(mainOption)
		{			
		case 'o' :
		case 'O' :	
				 SetConsoleTextAttribute(hStdOut, 8);
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl<<endl;				 				 
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl<<endl;				 
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl<<endl;
				 SetConsoleTextAttribute(hStdOut, 7);
				 //system(" pause");
				 //system("cls");
				 break;
		case '1' :
				 SetConsoleTextAttribute(hStdOut, 8);				 
				 cout<< " oo";
				 SetConsoleTextAttribute(hStdOut, 12);
				 cout<<"ooo";
				 SetConsoleTextAttribute(hStdOut, 8);
				 cout<<"oo"<<endl;
				 SetConsoleTextAttribute(hStdOut, 12);
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 SetConsoleTextAttribute(hStdOut, 8);
				 cout<< " oo";
				 SetConsoleTextAttribute(hStdOut, 12);
				 cout<<"ooo";
				 SetConsoleTextAttribute(hStdOut, 8);
				 cout<<"oo"<<endl<<endl;				 				 
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl<<endl;				 
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl<<endl;
				 SetConsoleTextAttribute(hStdOut, 7);
				 //system(" pause");
				 //system("cls");
				 break;
		case '2' :
				 SetConsoleTextAttribute(hStdOut, 8);
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl<<endl;			 
				 cout<< " oo";
				 SetConsoleTextAttribute(hStdOut, 14);
				 cout<<"ooo";
				 SetConsoleTextAttribute(hStdOut, 8);
				 cout<<"oo"<<endl;
				 SetConsoleTextAttribute(hStdOut, 14);
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 SetConsoleTextAttribute(hStdOut, 8);
				 cout<< " oo";
				 SetConsoleTextAttribute(hStdOut, 14);
				 cout<<"ooo";
				 SetConsoleTextAttribute(hStdOut, 8);
				 cout<<"oo"<<endl<<endl;				 				 								 
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl<<endl;
				 SetConsoleTextAttribute(hStdOut, 7);
				 //system(" pause");
				 //system("cls");
				 break;
		case '3' :
				 SetConsoleTextAttribute(hStdOut, 8);
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl<<endl;				 
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl;
				 cout<< " ooooooo"<<endl<<endl;				 
				 cout<< " oo";
				 SetConsoleTextAttribute(hStdOut, 10);
				 cout<<"ooo";
				 SetConsoleTextAttribute(hStdOut, 8);
				 cout<<"oo"<<endl;
				 SetConsoleTextAttribute(hStdOut, 10);
				 cout<< " ooooooo"<<endl;
